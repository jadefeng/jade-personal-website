---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en', { month: 'short', day: 'numeric', year: 'numeric' }).format(date);
---

<BaseLayout title="Projects — Jade Feng" description="Projects, prototypes, and experiments by Jade Feng.">
  <section class="stack">
    <div class="measure">
      <h1>Things I’m building</h1>
      <p class="muted">
        A rotating set of experiments, shipped features, and playful prototypes. 
      </p>
    </div>
    <div class="post-list">
      {projects.map((project) => (
        <Card class="stack">
          {project.data.overviewImage && (
            <div class="project-card-media">
              <img
                src={project.data.overviewImage.src}
                alt={project.data.overviewImage.alt ?? `${project.data.title} screenshot`}
                loading="lazy"
                decoding="async"
              />
            </div>
          )}
          <h3>
            <a class="card-title" href={`/projects/${project.slug}/`}>{project.data.title}</a>
          </h3>
          <div >{formatDate(project.data.date)}</div>

          <p class="muted">{project.data.description}</p>
          {project.data.links && (
            <div class="tags">
              {project.data.links.map((link) => (
                <a class="pill" href={link.href}>{link.label}</a>
              ))}
            </div>
          )}
        </Card>
      ))}
    </div>
  </section>
</BaseLayout>
